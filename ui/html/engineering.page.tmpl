{{template "base" .}}

{{define "title"}}Incomplete Work Orders{{end}}

{{define "body"}}
    <h2>Incomplete Work Orders <a href="/engineering/workOrder">(View All)</a></h2>
    {{if .Requests}}
     <table>
        <tr>
            <th>Title</th>
            <th>Location</th>
            <th>Created On</th>
            <th>Created By</th>
            <th>Status</th>
        </tr>
        {{range .Requests}}
        <tr>
            <td><a href='/engineering/workOrder/{{.ID}}'>{{.Title}}</a></td>
            <td>{{.Location.Title}}</td>
            <td>{{humanDate .Created}}</td>
            <td>{{.CreatedBy.FullName}}</td>
            <td>{{.RequestStatus.Title}}</td>
        </tr>
        {{end}}
    </table>
    {{else}}
        <p>All engineering work orders are complete!</p>
    {{end}}
    {{template "newWorkOrderBtn" .}}
{{end}}