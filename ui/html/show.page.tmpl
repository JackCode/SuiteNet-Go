{{template "base" .}}

{{define "title"}}Maintenance Request{{end}}

{{define "body"}}
    {{with .WorkOrder}}
    <div class='snippet'>
        <div class='metadata'>
            <strong>{{.Location.Title}} - {{.Title}}</strong>
            <span>Status: {{.RequestStatus.Title}}</span>
        </div>
        {{if .Notes}}
            {{range .Notes}}
                <pre><code>{{humanDate .Created}}: {{.Content}} - {{.CreatedBy.FullName}}</code></pre>
            {{end}}
        {{else}}
        <pre><code>This work order has no notes.</code></pre>
        {{end}}
        <div class='metadata'>
            <time>Created: {{humanDate .Created}}</time>
            <span>Created by: {{.CreatedBy.FullName}}</span>
        </div>
    </div>
    {{end}}
    {{if not .WorkOrder.RequestStatus.IsClosed}}
    <form action='/engineering/workOrder/{{.WorkOrder.ID}}/complete' method='POST'>
        <input type='hidden' name='csrf_token' value='{{.CSRFToken}}'>
        <div>
            <input type='submit' value='COMPLETE'>
        </div>
    </form>  
    {{end}}
{{end}}
